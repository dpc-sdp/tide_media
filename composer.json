    },
    "extra": {
        "patches": {
            "drupal/focal_point": {
                "Preview modal does not load js/css - https://www.drupal.org/project/focal_point/issues/3126288": "https://www.drupal.org/files/issues/2020-04-09/3126288-2.patch"
            }
